{
  "manifest_version": 3,
  "name": "Kokoro Local TTS",
  "version": "1.0",
  "description": "Read aloud text using local Kokoro TTS server.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "commands": {
    "stop-playback": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Stop TTS playback"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Speak with Kokoro"
  },
  "icons":{
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
